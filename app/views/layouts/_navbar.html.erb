<header class="flex flex-wrap sm:flex-nowrap w-full bg-white text-sm">
  <nav class="max-w-[85rem] w-full mx-auto px-4 flex items-center justify-between" aria-label="Global">
    
    <div>
      <a class="inline-flex items-center gap-x-2 text-xl font-semibold" href="#">
        <%= image_tag "logo.png", alt: "Logo", class: "rounded-full h-10 w-10 p-1" %>
        <p class="text-2xl font-black text-teal-500">FinMan</p>
      </a>
    </div>

    <div>
      <div data-controller="dropdown" class="relative">
        <span id="avatarButton" type="button" data-action="click->dropdown#toggle" class="inline-block size-6 bg-teal-300 rounded-full overflow-hidden cursor-pointer">
          <svg class="size-full text-teal-300" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="0.62854" y="0.359985" width="15" height="15" rx="7.5" fill="white"></rect>
            <path d="M8.12421 7.20374C9.21151 7.20374 10.093 6.32229 10.093 5.23499C10.093 4.14767 9.21151 3.26624 8.12421 3.26624C7.0369 3.26624 6.15546 4.14767 6.15546 5.23499C6.15546 6.32229 7.0369 7.20374 8.12421 7.20374Z" fill="currentColor"></path>
            <path d="M11.818 10.5975C10.2992 12.6412 7.42106 13.0631 5.37731 11.5537C5.01171 11.2818 4.69296 10.9631 4.42107 10.5975C4.28982 10.4006 4.27107 10.1475 4.37419 9.94123L4.51482 9.65059C4.84296 8.95684 5.53671 8.51624 6.30546 8.51624H9.95231C10.7023 8.51624 11.3867 8.94749 11.7242 9.62249L11.8742 9.93184C11.968 10.1475 11.9586 10.4006 11.818 10.5975Z" fill="currentColor"></path>
          </svg>
        </span>

        <div id="userDropdown" data-dropdown-target="menu" class="absolute right-0 mt-2 z-10 hidden bg-teal-500 bg-opacity-90 divide-y divide-teal-100 rounded-lg shadow w-44">
          <div class="px-4 py-3 text-sm text-tail-900">
            <div class="text-right">Bonnie Green</div>
            <div class="font-medium text-right truncate"><%= current_user.email %></div>
          </div>
          <ul class="py-2 text-center text-sm text-tail-700" aria-labelledby="avatarButton">
            <li>
              <a href=<%= users_edit_path %> class="block px-4 py-2 hover:bg-tail-100">Settings</a>
            </li>
          </ul>
          <div class="py-1">
            <%= form_with url: destroy_user_session_path, method: :delete, local: true do %>
              <button type="submit" class="block w-full text-center px-4 py-2 text-sm text-tail-700 hover:bg-tail-100">
                Sign out
              </button>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </nav>
</header>